<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seladanghijau.onebookresepi2016.activities.Favorite">

    <!-- The main content view -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlSearchPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/etSearch"
                android:hint="Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ibSearchButton"/>

            <ImageButton
                android:id="@+id/ibSearchButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:background="#00000000"
                android:src="@drawable/ic_search_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvNoResult"
            android:text="No result"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lvResepiList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <GridView
            android:id="@+id/gvRempahList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:gravity="center" />
    </LinearLayout>

    <!-- The navigation drawer -->
    <include layout="@layout/layout_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
